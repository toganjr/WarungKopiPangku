<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="10dp"
    >

    <RelativeLayout
        android:id="@+id/CardViewPesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="@color/darkwhite"

        >

        <TextView
            android:id="@+id/TV_pesanannamaproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="18dp"
            android:layout_toLeftOf="@id/TV_pesanantotalHarga"
            android:layout_alignParentLeft="true"
            android:textColor="@color/realblack"
            />
        <TextView
            android:id="@+id/TV_pesanantotalproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 pesanan"
            android:layout_toRightOf="@id/TV_textJumlahproduct"
            android:layout_below="@id/TV_pesanannamaproduct"
            android:textColor="@color/realblack"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/TV_textJumlahproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jumlah :"
            android:layout_below="@id/TV_pesanannamaproduct"
            android:layout_marginRight="9dp"
            android:layout_marginTop="4dp"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/TV_textTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total : "
            android:layout_toLeftOf="@id/TV_pesanantotalHarga"
            android:textSize="10dp"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/TV_pesanantotalHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Rp. 10,000"
            android:textSize="14dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>